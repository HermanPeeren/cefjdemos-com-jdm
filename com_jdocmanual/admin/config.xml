<?xml version="1.0" encoding="utf-8"?>
<config>

	<fieldset
		name="basic"
		label="COM_JDOCMANUAL_PARAMS_BASIC_SETTINGS_LABEL"
		description="COM_JDOCMANUAL_PARAMS_BASIC_SETTINGS_DESC"
		>

		<field
			name="gfmfiles_path"
			type="text"
			label="COM_JDOCMANUAL_PARAMS_ARTICLES_PATH_LABEL"
			description="COM_JDOCMANUAL_PARAMS_ARTICLES_PATH_DESC"
		/>

		<field
			name="installation_subfolder"
			type="text"
			label="COM_JDOCMANUAL_PARAMS_INSTALLATION_SUBFOLDER_LABEL"
			description="COM_JDOCMANUAL_PARAMS_INSTALLATION_SUBFOLDER_DESC"
		/>

		<field
			name="enable_gitpull"
			type="radio"
			label="COM_JDOCMANUAL_PARAMS_ENABLE_GITPULL_LABEL"
			description="COM_JDOCMANUAL_PARAMS_ENABLE_GITPULL_DESC"
			layout="joomla.form.field.radio.switcher"
			default="0"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
